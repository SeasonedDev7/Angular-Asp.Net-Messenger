/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@chat-client/core": ["src/app/core"],
      "@chat-client/core/guards": ["src/app/core/guards"],
      "@chat-client/core/interceptors": ["src/app/core/interceptors"],
      "@chat-client/core/models": ["src/app/core/models"],
      "@chat-client/core/services": ["src/app/core/services"],

      "@chat-client/home": ["src/app/home"],
      "@chat-client/home/landing": ["src/app/home/landing"],
      "@chat-client/home/features": ["src/app/home/features"],
      "@chat-client/home/about": ["src/app/home/about"],

      "@chat-client/messenger": ["src/app/messenger"],
      "@chat-client/messenger/store": ["src/app/messenger/store"],

      "@chat-client/shared": ["src/app/shared"],

      "@chat-client/shared/auth": ["src/app/shared/auth"],
      "@chat-client/shared/auth/store": ["src/app/shared/auth/store"],

      "@chat-client/shared/language": ["src/app/shared/language"],
      "@chat-client/shared/language/store": ["src/app/shared/language/store"],
      "@chat-client/shared/language/language-selector": ["src/app/shared/language/language-selector"],

      "@chat-client/shared/translation": ["src/app/shared/translation"],
      "@chat-client/shared/translation/store": ["src/app/shared/translation/store"],

      "@chat-client/shared/splash-screen": ["src/app/shared/splash-screen"],

      "@chat-client/shared/illustration-builder": ["src/app/shared/illustration-builder"],
    }
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
